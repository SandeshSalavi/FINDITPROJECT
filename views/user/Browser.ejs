    /* ---------------------------------------------------------
        ðŸ”¥ RESPONSIVE UI FIXES
    ---------------------------------------------------------- */

    /* For tablets (â‰¤ 992px) */
    @media (max-width: 992px) {
        .items {
            padding-left: 40px;
            padding-right: 40px;
        }

        .sel,
        .dbtn,
        .search {
            width: 100%;
        }

        .dropdown {
            padding-left: 20px;
        }

        .searchcont {
            flex-direction: column;
            align-items: flex-start !important;
            gap: 10px;
        }
    }

    /* For mobile (â‰¤ 768px) */
    @media (max-width: 768px) {
        .items {
            padding-left: 20px;
            padding-right: 20px;
        }

        .sel,
        .dbtn {
            width: 100% !important;
        }

        .dropdown {
            padding-left: 0;
            width: 100%;
        }

        .headit h2 {
            font-size: 1.8rem;
        }

        .container {
            padding: 0;
        }

        .card img {
            height: 200px;
            object-fit: cover;
        }
    }

    /* For very small mobile screens (â‰¤ 480px) */
    @media (max-width: 480px) {

        .items {
            padding-left: 10px;
            padding-right: 10px;
        }

        .headit h2 {
            font-size: 1.5rem;
        }

        .sel,
        .dbtn {
            width: 100% !important;
        }

        .searchcont {
            width: 100%;
            flex-direction: column;
            gap: 10px;
        }

        .dropdown {
            width: 100%;
        }

        .card-body h5 {
            font-size: 1rem;
        }

        .card-body p {
            font-size: 0.9rem;
        }
    }
</style>


    <div class="items">
        <div class="itemscontent">

            <div class="headit">
                <h2>Browse Items</h2>
                <p>Search through lost and found items reported by the community</p>
            </div>


            <div class="searchcont d-flex justify-content-start align-items-center mt-3">
                <form class="d-flex w-auto" action="/browser" method="get">
                    <select class="form-control me-2 sel" name="status">
                        <option value="">Select Status</option>
                        <option value="lost">Lost</option>
                        <option value="found">Found</option>
                    </select>

                    <button class="btn btn-outline-info" type="submit">Search</button>
                </form>


