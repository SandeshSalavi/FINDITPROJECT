                        <li><a class="dropdown-item" href="#">Clothings</a></li>
                    </ul>
                </div>
            </div>




            <div class="container mt-5">
                <div class="row">

                    <% for(let itm of data) { %>
                        <div class="col-12 col-md-4 col-lg-4 mb-4"> <!-- 3 cards per row -->

                            <div class="card h-100">
                                <img src="<%= itm.image_url %>" class="card-img-top" alt="Item Image">

                                <div class="card-body">
                                    <h5 class="card-title">
                                        <%= itm.title %>
                                    </h5>
                                    <p class="card-text">
                                        <%= itm.description %>
                                    </p>
                                    <form action="/browse/<%= itm.item_id %>" method="get">
                                        <button class="btn btn-primary w-100">View</button>
                                    </form>
                                </div>
                            </div>

                        </div>
                        <% } %>

                </div>
            </div>






        </div>
    </div>


































