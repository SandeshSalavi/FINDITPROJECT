<% let info = det; %>

    <div class="detcont">
        <div class="detimg">
            <img src="<%= info.image_url %>" alt="" class="imgdt">
        </div>

        <div class="detdec">
            <h2><%= info.title %></h2>
            <p><%= info.category %></p>

            <h6>Description:</h6>
            <p><%= info.description %></p>

            <h6>Location:</h6>
            <p><%= info.location %></p>

            <h6>Date:</h6>
<p>
  <%= info.date_reported ? new Date(info.date_reported).toISOString().split("T")[0] : "N/A" %>
</p>

        </div>
    </div>

</div>

























