<% layout("/layouts/boilerplate") %>

<style>
    .details {
        height: 1000px;
        padding-top: 6rem;
        background-color: rgb(255, 255, 255);
        padding-left: 3rem;
        padding-right: 3rem;
    }
    .btn:hover {
        background-color: rgb(235, 145, 35);
    }
    .detcont {
        margin-top: 2rem;
        padding-left: 6rem;
    }
    .imgdt {
        height: 30rem;
        width: 30rem;
        border-radius: 10px;
    }
    .detdec {
        margin-top: 2rem;
    }
</style>

<div class="details">

    <!-- Back Button -->
    <form action="/browser" method="get">
        <button class="btn"><i class="fa-solid fa-arrow-left"></i> Back to Browser</button>
