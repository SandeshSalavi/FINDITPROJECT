    <form action="/report" method="post">

        <div class="repadd">
            <div class="d-flex justify-content-center ">

                <div class="card p-4 shadow" style="width: 800px;">

                    <div class="repcont">
                        <div class="rephead">
                            <h1>Report Lost Item</h1>
                            <p>Provide detailed information to help us find your item</p>
                        </div>
                        <div class="repfor">

                            <label for="">Item Name</label><br>
                            <input type="text" class="form-control" id="basic-url" name="title"
                                aria-describedby="basic-addon3 basic-addon4" placeholder="eg.,Blue BackPack" required>
                            <br>

                            <label for="">Category</label><br>
                            <input type="text" class="form-control" id="basic-url" name="category"
                                aria-describedby="basic-addon3 basic-addon4" placeholder="Category" required>
                            <br>
                            <label for="">Description</label><br>
                            <textarea class="form-control" id="exampleFormControlTextarea1" rows="3" name="description"
                                placeholder="Describe your item in detail" required></textarea>
                            <br>
                            <div class="row">
                                <div class="col-md-6">
                                    <label>Last Seen Location</label>
                                    <input type="text" class="form-control" placeholder="e.g., library" name="location" required>
                                </div>

                                <div class="col-md-6">
                                    <label>Date Lost</label>
                                    <input type="date" class="form-control" name="date_reported" required>
                                </div>
                            </div>
                            <br>

                            <label for="">User id</label><br>
                            <input type="text" class="form-control" id="basic-url" name="user_id"
                                aria-describedby="basic-addon3 basic-addon4" placeholder="Category" required>
                            <br>
                            <label>Status</label>
                            <select class="form-control" name="status">
                                <option value="lost">Lost</option>
                                <option value="found">Found</option>
                            </select>
                            <br>
                            <label for="">Image URL</label><br>
                            <input type="text" class="form-control" id="basic-url"
                                aria-describedby="basic-addon3 basic-addon4" placeholder="Image url" name="image_url" required>
                            <br>
                            <button class="btn btn-primary w-100">Submit</button>





                        </div>

                    </div>



                </div>








            </div>
        </div>




    </form>







































