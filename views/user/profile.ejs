<% layout('/layouts/boilerplate') %>

<style>
    .containers {
        padding-top: 5rem;
        padding-bottom: 2rem;
        padding-left: 4rem;
    }
    .cont1 {
        justify-items: center;
    }
    .continfo {
        padding-top: 1rem;
    }
    .contsimg{
        height: 14rem;
        width: 14rem;
    }
</style>

<!-- USER PROFILE BOX -->
<div class="containers profile-box">
    <div class="row justify-content-start">
        <div class="col-12 col-md-4 p-4 bg-light border rounded">
            <div class="cont1 text-center">

                <div class="contimg mb-3">
                    <img src="\uploads\profile.png" alt="" class="contsimg">
                </div>

                <div class="continfo">
                    <h3><%= det.name %></h3>
                    <p><i class="fa-solid fa-phone"></i> +<%= det.phone %></p>
                    <p><i class="fa-solid fa-envelope"></i> <%= det.email %></p>
                </div>

            </div>
        </div>
    </div>
</div>

<!-- USER ITEMS GRID -->
<div class="container mt-5">
    <div class="row">

        <% if (data && data.length > 0) { %>
            <% for (let itm of data) { %>
                <div class="col-12 col-md-4 col-lg-4 mb-4">

                    <div class="card h-100">
                        <img src="<%= itm.image_url %>" class="card-img-top" alt="Item Image">

                        <div class="card-body">
                            <h5 class="card-title"><%= itm.title %></h5>
                            <p class="card-text"><%= itm.description %></p>

                            <form action="/browse/<%= itm.item_id %>" method="get">
                                <button class="btn btn-primary w-100">View</button>
                            </form>
                        </div>
                    </div>

                </div>
            <% } %>

        <% } else { %>
            <h3 class="text-center text-muted">No items uploaded yet.</h3>
        <% } %>

    </div>
</div>

